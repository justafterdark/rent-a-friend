<h1 class='text-center my-5'>Select a Mobfriend</h1>
<div class="mobfriends-container container">
  <div class="row">
    <% @mobfriends.each do |mobfriend| %>
    <div class="col-sm-6 col-md-3">
      <div class="mobfriend-card text-center bg-light rounded shadow-sm my-2">

        <div class="mobfriend-card-image-container">
          <%= link_to image_tag(mobfriend.photo_url, width: '100%'), mobfriend_path(mobfriend) %>
        </div>

        <div class="mobfriend-card-tagline my-2" style="height: 40px">
          <p>
            <%= mobfriend.tagline.truncate(50, separator: ' ') %>
          </p>
        </div>

        <div class="mobfriend-card-details d-flex justify-content-around" >
          <!-- <p>$<%= mobfriend.hourly_rate %>/hr</p> -->
        </div>

        <div class="w-100 d-flex">

          <div>
            <p class='m-0 px-4'>$<%= mobfriend.hourly_rate %>/hr</p>
          </div>

          <%= link_to mobfriend_path(mobfriend), class:"ml-2" do %>
            <div class="w-100 bg-lg">
              Profile
            </div>
          <% end %>

        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
