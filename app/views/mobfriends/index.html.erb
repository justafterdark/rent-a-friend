<h1 class='text-center my-5'>Select a Mobfriend</h1>
<div class="mobfriends-container container">
  <div class="row">
    <% @mobfriends.each do |mobfriend| %>
    <div class="col-md-6 col-lg-4">
      <div class="mobfriend-card text-center bg-light shadow-sm my-3 pb-3">
        <div class="mobfriend-card-image-container">
          <%= link_to mobfriend_path(mobfriend) do %>
            <% if mobfriend.photo.url.nil? %>
              <%= image_tag("https://source.unsplash.com/600x400/?sig=#{rand(1..100)}/&#{mobfriend.gender},#{@adjective_arr.sample},face", width: '100%') %>
            <% else %>
              <img src=<%= cl_image_path mobfriend.photo, crop: :fill %> alt=<%= mobfriend.user.username %> style="width: 100%">
            <% end %>
          <% end %>
        </div>
        <div class="mobfriend-details">
          <p><%= "#{mobfriend.first_name} #{mobfriend.last_name}" %></p>
          <p>$<%= mobfriend.hourly_rate %>/hr</p>
        </div>
        <div class="mobfriend-card-tagline">
          <p>
            "<% if mobfriend.tagline.length > 65 %>
            <%= mobfriend.tagline[0..65] %>...
            <% else %>
            <%= mobfriend.tagline %>
            <% end %>"
          </p>
        </div>
        <div class="mobfriend-buttons">
          <div class="btn btn-info">
            <%= link_to 'View', mobfriend_path(mobfriend) %>
          </div>
          <%= link_to 'Add to Booking', mobfriend_your_events_path(mobfriend), class: 'btn btn-info' %>
        </div>
              <% end %>
    </div> </div>
  <div class="map-container">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
