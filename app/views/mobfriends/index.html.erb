<%= render 'shared/navbar' %>
<h1 class='text-center my-5'>Find a Mobfriend</h1>
<div class="mobfriends-with-map-container">
  <div class="mobfriends-container">
    <div class="row">
      <% @mobfriends.each do |mobfriend| %>
        <div class="mobfriend-the-card col-sm-12 col-md-6 col-lg-4">
          <div class="mobfriend-card text-center my-2">
            <div class="mobfriend-card-image-container">
              <%= link_to mobfriend_path(mobfriend) do %>
                <% if mobfriend.photo.url.nil? %>
                  <%= image_tag('https://source.unsplash.com/600x600/?person,face', width: '100%' ) %>
                <% else %>
                  <img src=<%= cl_image_path mobfriend.photo, crop: :fill %> alt=<%= mobfriend.user.username %> style="width: 100%">
                <% end %>
              <% end %>
            </div>
                        <div class="mobfriend-card-tagline my-2">
              <p>
                <%= mobfriend.tagline.truncate(50, separator: ' ') %>
              </p>
            </div>
            <div class="mobfriend-card-foot">
              <div class="rate-wrap">
                <p class="hourly-rate align-middle">$<%= mobfriend.hourly_rate %>/hr</p>
              </div>
              <div class="rate-wrap">
                <%= link_to mobfriend_path(mobfriend), class: 'unstyle-links' do %>
                  <div class="profile">
                    Profile
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
              <% end %>
    </div> </div>
  <div class="map-container">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
</div>
